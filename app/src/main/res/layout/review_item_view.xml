<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="17dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="17dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorGrey3"
            android:src="@drawable/ic_user_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/image"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isabel Hunt"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorPostText"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:24 AM | July 01, 2020"
                android:textColor="@color/color_grey_text"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginTop="2dp"/>

        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Very professional caretaker.Good Service"
        android:textColor="@color/color_light_black"
        android:textSize="13sp"
        android:textStyle="normal" />



</LinearLayout>